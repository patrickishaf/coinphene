{
  "compilerOptions": {

    /* Language and Environment */
    "target": "es2015",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "src/",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],

    /* JavaScript Support */
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "*.ts", "__tests__/**/*"],
  "exclude": ["**/*.spec.ts"]
}
